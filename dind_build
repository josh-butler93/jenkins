pipeline {
    agent {
        docker{
            image 'docker:stable-dind'
            args '--privileged'
        }
    }
    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    // Sample Docker commands for teesting
                    sh 'docker version'
                    sh 'docker info'
                    sh 'docker run hello-world'
                }
            }
        }
    }
}

// docker:stable-dind is the Docker image we’re using. It’s the official image designed for Docker-in-Docker
// --privileged flag: This is required for Docker to work inside a Docker container
// The sh commands test basic Docker functionality, running docker version, docker info, and docker run hello-world
